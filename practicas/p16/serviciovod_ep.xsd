<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
    elementFormDefault="qualified">

    <xs:complexType name="CuentaType">
        <xs:sequence>
            <xs:element name="perfiles">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="perfil" type="PerfilesType" maxOccurs="unbounded"/>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
        <xs:attribute name="correo" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="PerfilesType">
        <xs:attribute name="usuario" type="xs:string" use="required"/>
        <xs:attribute name="idioma" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="ContenidoType">
        <xs:sequence>
            <xs:element name="peliculas" type="PeliculasType" />
            <xs:element name="series" type="SeriesType" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="PeliculasType">
        <xs:sequence>
            <xs:element name="genero" type="GeneroType" maxOccurs="unbounded"/>
        </xs:sequence>
        <xs:attribute name="region" type="RegionType" use="optional" default="USA"/>
    </xs:complexType>

    <xs:complexType name="SeriesType">
        <xs:sequence>
            <xs:element name="genero" type="GeneroType" maxOccurs="unbounded"/>
        </xs:sequence>
        <xs:attribute name="region" type="RegionType" use="optional" default="USA"/>
    </xs:complexType>

    <xs:simpleType name="RegionType">
        <xs:restriction base="xs:string">
            <xs:enumeration value="MEX"/>
            <xs:enumeration value="USA"/>
            <xs:enumeration value="ESP"/>
            <xs:enumeration value="ARG"/>
            <xs:enumeration value="KOR"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:complexType name="GeneroType">
    <xs:sequence>
        <xs:element name="titulo" maxOccurs="unbounded">
            <xs:complexType>
                <xs:simpleContent>
                    <xs:extension base="xs:string">
                        <xs:attribute name="duracion" type="xs:string" use="required"/>
                    </xs:extension>
                </xs:simpleContent>
            </xs:complexType>
        </xs:element>
    </xs:sequence>
    <xs:attribute name="nombre" type="xs:string" use="required"/>
</xs:complexType>


    <xs:complexType name="CatalogoType">
        <xs:sequence>
            <xs:element name="cuenta" type="CuentaType" maxOccurs="unbounded" />
            <xs:element name="contenido" type="ContenidoType" />
        </xs:sequence>
    </xs:complexType>

    <xs:element name="CatalogoVOD" type="CatalogoType" />

</xs:schema>
